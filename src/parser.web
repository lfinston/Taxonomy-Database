@=program: statement_list END@>
{

    Scanner_Node param = static_cast<Scanner_Node>(yyget_extra(parameter));

#if DEBUG_COMPILE 
    if (DEBUG)
    {
        cerr << "*** Parser:  Rule `statement:  END'." 
             << endl;

    }  /* |if (DEBUG)|  */  
#endif  /* |DEBUG_COMPILE|  */ 


    param->end_flag = true;

#if 1 
    cerr << "param->id       == " << param->id << endl
         << "param->end_flag == " << param->end_flag << endl;
#endif 

    return 0;
};

